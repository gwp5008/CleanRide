<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.psu.ist402.cleanride.RegisterActivity"
    tools:showIn="@layout/content_register">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Please enter information into all fields. If the username you choose is not unique, we'll let you know and you'll have to pick another. When you have successfully registered, you'll be able to login."
                android:id="@+id/registerDirections"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="textPersonName"
                android:text="Username"
                android:ems="10"
                android:id="@+id/registerUserNameField" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="textPersonName"
                android:text="Password"
                android:ems="10"
                android:id="@+id/registerPasswordField" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="textPersonName"
                android:text="Email"
                android:ems="10"
                android:id="@+id/registerEmailField" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="textPersonName"
                android:text="First Name"
                android:ems="10"
                android:id="@+id/registerFirstNameField" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="textPersonName"
                android:text="Last Name"
                android:ems="10"
                android:id="@+id/registerLastNameField" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you a driver?"
                android:id="@+id/registerDriverBox" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Attempt Register"
                android:id="@+id/registerAttemptRegisterButton"
                android:layout_gravity="center"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="navToLogin"
                android:layout_margin="10dp"
                android:text="Login"
                android:id="@+id/loginButton"
                android:layout_gravity="center"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="navToHome"
                android:layout_margin="10dp"
                android:text="Home"
                android:id="@+id/registerMainButton"
                android:layout_gravity="center"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>